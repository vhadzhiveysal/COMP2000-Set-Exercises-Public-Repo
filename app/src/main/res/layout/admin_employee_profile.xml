<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start|top">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"

            android:id="@+id/back_btn"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/icon_account_box"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Nameington"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:padding="10dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:backgroundTint="@color/black"
                app:cornerRadius="8dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_marginEnd="40dp"

                android:id="@+id/edit_btn"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="@color/black"
                app:cornerRadius="8dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_marginStart="40dp"
                android:id="@+id/delete_btn"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile:\n07444555666"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:\nNameNameington@email.com"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wage:\nÂ£16.47 / hour"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Begun Work:\n06/11/25"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>

    </LinearLayout>


</RelativeLayout>