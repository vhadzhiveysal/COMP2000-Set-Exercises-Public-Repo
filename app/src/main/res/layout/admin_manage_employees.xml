<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start|top">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"

            android:id="@+id/back_btn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Employees"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:padding="10dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Nameington"
            android:drawableLeft="@drawable/icon_account_box"
            android:textSize="20sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:id="@+id/employee_btn1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Nameington"
            android:drawableLeft="@drawable/icon_account_box"
            android:textSize="20sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:id="@+id/employee_btn2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Nameington"
            android:drawableLeft="@drawable/icon_account_box"
            android:textSize="20sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:id="@+id/employee_btn3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Nameington"
            android:drawableLeft="@drawable/icon_account_box"
            android:textSize="20sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:id="@+id/employee_btn4"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Nameington"
            android:drawableLeft="@drawable/icon_account_box"
            android:textSize="20sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:layout_marginTop="16dp"
            android:id="@+id/employee_btn5"/>


    </LinearLayout>

</RelativeLayout>